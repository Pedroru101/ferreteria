# ============================================================================
# CONFIGURACIÓN DE GOOGLE SHEETS (Carga de Productos)
# ============================================================================

# Habilitar carga de productos desde Google Sheets
# Valores: true o false
ENABLE_GOOGLE_SHEETS=false

# ID de la hoja de cálculo de Google Sheets
# Obtenerlo de la URL: https://docs.google.com/spreadsheets/d/{SPREADSHEET_ID}/edit
# Ejemplo: 1BxiMVs0XRA5nFMdKvBdBZjgmUUqptlbs74OgvE2upms
GOOGLE_SHEETS_SPREADSHEET_ID=

# API Key de Google Cloud
# Obtenerlo desde: https://console.cloud.google.com/
# IMPORTANTE: Usar una API Key con restricciones (solo Google Sheets API)
GOOGLE_SHEETS_API_KEY=

# Nombre de la hoja para productos
GOOGLE_SHEETS_PRODUCTOS_SHEET=Productos

# Nombre de la hoja para servicios
GOOGLE_SHEETS_SERVICIOS_SHEET=Servicios

# Nombre de la hoja para fabricación
GOOGLE_SHEETS_FABRICACION_SHEET=Fabricacion

# Duración del cache en minutos
GOOGLE_SHEETS_CACHE_DURATION=60

# ============================================================================
# INSTRUCCIONES: Configurar Google Sheets
# ============================================================================
#
# PASO 1: Crear la hoja de cálculo
# 1. Ir a https://sheets.google.com/
# 2. Crear una nueva hoja de cálculo
# 3. Renombrar las hojas según los valores de arriba (Productos, Servicios, Fabricacion)
#
# PASO 2: Estructura de la hoja "Productos"
# Columnas: Nombre | Descripción | Categoría | Precio | Stock | Imagen
# Ejemplo:
#   Poste de Hormigón 2.5m | Poste de hormigón armado | postes | 3500 | 150 | postes/hormigon-2.5m.jpg
#   Tejido Romboidal 1.5m | Tejido de alambre romboidal | tejidos | 2500 | 200 | tejidos/romboidal-1.5m.jpg
#
# PASO 3: Estructura de la hoja "Servicios"
# Columnas: Nombre | Descripción | Icono | Orden
# Ejemplo:
#   Corte a Medida | Cortamos tus materiales a la medida exacta | scissors | 1
#   Entrega a Domicilio | Entregamos en tu domicilio | truck | 2
#
# PASO 4: Estructura de la hoja "Fabricacion"
# Columnas: Título | Descripción | Icono | Características
# Ejemplo:
#   Postes Personalizados | Fabricamos postes según tus especificaciones | hammer | Resistencia máxima
#
# PASO 5: Obtener el ID de la hoja
# 1. Abrir la hoja de cálculo
# 2. Copiar el ID de la URL: https://docs.google.com/spreadsheets/d/{ID}/edit
# 3. Pegar el ID en GOOGLE_SHEETS_SPREADSHEET_ID
#
# PASO 6: Crear API Key
# 1. Ir a https://console.cloud.google.com/
# 2. Crear un nuevo proyecto
# 3. Habilitar Google Sheets API
# 4. Crear una API Key (Credenciales > Crear credenciales > API Key)
# 5. Restringir la API Key a solo Google Sheets API
# 6. Pegar la API Key en GOOGLE_SHEETS_API_KEY
#
# PASO 7: Compartir la hoja
# 1. Hacer clic en "Compartir"
# 2. Cambiar a "Cualquiera con el enlace"
# 3. Seleccionar "Visualizador"
#
# ============================================================================

# ============================================================================
# CONFIGURACIÓN DE LA CALCULADORA
# ============================================================================

# Separación por defecto entre postes (en metros)
CALCULATOR_DEFAULT_POST_SPACING=2.5

# Cantidad de postes esquineros
CALCULATOR_CORNER_POSTS=4

# Largo estándar de rollo de tejido (en metros)
CALCULATOR_MESH_ROLL_LENGTH=10

# ============================================================================
# CONFIGURACIÓN DE PRECIOS Y MONEDA
# ============================================================================

# Precio de instalación por metro lineal
PRICING_INSTALLATION_PRICE_PER_METER=500

# Margen de ganancia (porcentaje)
PRICING_MARGIN_PERCENTAGE=20

# Código de moneda (ISO 4217)
PRICING_CURRENCY=ARS

# Símbolo de moneda
PRICING_CURRENCY_SYMBOL=$

# Locale para formato de moneda (formato: idioma-PAÍS)
PRICING_CURRENCY_LOCALE=es-AR

# Cantidad mínima de decimales
PRICING_CURRENCY_MIN_FRACTION_DIGITS=0

# Cantidad máxima de decimales
PRICING_CURRENCY_MAX_FRACTION_DIGITS=2

# Tasa de impuesto (IVA u otro)
PRICING_TAX_RATE=0

# ============================================================================
# CONFIGURACIÓN DE COTIZACIONES
# ============================================================================

# Días de validez de una cotización
QUOTATION_VALIDITY_DAYS=30

# Habilitar descarga de PDF
QUOTATION_PDF_ENABLED=true

# Habilitar envío por WhatsApp
QUOTATION_WHATSAPP_ENABLED=true

# Guardar automáticamente cotizaciones
QUOTATION_AUTO_SAVE=true

# Prefijo para ID de cotizaciones
QUOTATION_PREFIX=COT

# Incluir términos y condiciones en PDF
QUOTATION_INCLUDE_TERMS=true

# Texto de términos y condiciones
# {days} será reemplazado por QUOTATION_VALIDITY_DAYS
QUOTATION_TERMS_TEXT=Cotización válida por {days} días. Precios sujetos a cambios sin previo aviso. No incluye IVA.

# ============================================================================
# CONFIGURACIÓN DE PEDIDOS
# ============================================================================

# Prefijo para ID de pedidos
ORDERS_PREFIX=ORD

# Habilitar seguimiento de pedidos
ORDERS_ENABLE_TRACKING=true

# Notificar automáticamente al cliente por WhatsApp
ORDERS_AUTO_NOTIFY_CUSTOMER=true

# ============================================================================
# CONFIGURACIÓN DE ADMINISTRACIÓN
# ============================================================================

# Contraseña por defecto del panel de administración
# IMPORTANTE: Cambiar esta contraseña en producción
ADMIN_DEFAULT_PASSWORD=admin123

# Tiempo de sesión en milisegundos (3600000 = 1 hora)
ADMIN_SESSION_TIMEOUT=3600000

# Permitir cambio de contraseña
ADMIN_ENABLE_PASSWORD_CHANGE=true

# Intervalo de actualización del dashboard en milisegundos
ADMIN_DASHBOARD_REFRESH_INTERVAL=300000

# Máximo de intentos de login fallidos
ADMIN_MAX_LOGIN_ATTEMPTS=5

# Duración del bloqueo después de intentos fallidos (en milisegundos)
ADMIN_LOCKOUT_DURATION=900000

# ============================================================================
# CONFIGURACIÓN DE LIMPIEZA AUTOMÁTICA DE DATOS
# ============================================================================

# Habilitar limpieza automática
DATA_CLEANUP_ENABLED=true

# Intervalo de verificación en milisegundos (3600000 = 1 hora)
DATA_CLEANUP_CHECK_INTERVAL=3600000

# Días de retención de cotizaciones expiradas
DATA_CLEANUP_QUOTATION_EXPIRY_DAYS=30

# Días de retención de logs de error
DATA_CLEANUP_ERROR_LOG_RETENTION_DAYS=7

# Límite máximo de almacenamiento en MB
DATA_CLEANUP_MAX_STORAGE_MB=5

# Ejecutar limpieza al inicializar
DATA_CLEANUP_AUTO_CLEANUP_ON_INIT=true

# ============================================================================
# CONFIGURACIÓN DE ANIMACIONES
# ============================================================================

# Duración de animaciones AOS en milisegundos
ANIMATIONS_AOS_DURATION=800

# Offset para activar animaciones (en píxeles)
ANIMATIONS_AOS_OFFSET=100

# Función de easing para animaciones
ANIMATIONS_AOS_EASING=ease-in-out

# Ejecutar animaciones solo una vez
ANIMATIONS_AOS_ONCE=false

# Retraso del preloader en milisegundos
ANIMATIONS_PRELOADER_DELAY=1000

# ============================================================================
# CONFIGURACIÓN DE GALERÍA
# ============================================================================

# Cantidad de items por página en la galería
GALLERY_ITEMS_PER_PAGE=6

# Habilitar lightbox en la galería
GALLERY_ENABLE_LIGHTBOX=true

# ============================================================================
# CONFIGURACIÓN DE FORMULARIOS
# ============================================================================

# Habilitar notificaciones por email
FORM_ENABLE_EMAIL_NOTIFICATIONS=false

# Endpoint del backend para enviar emails
FORM_EMAIL_ENDPOINT=/api/contact

# ============================================================================
# NOTAS IMPORTANTES
# ============================================================================
#
# 1. SEGURIDAD:
#    - Nunca commits el archivo .env a control de versiones
#    - Mantén las API Keys y contraseñas seguras
#    - Usa variables de entorno en producción
#    - Cambia la contraseña de admin en producción
#
# 2. GOOGLE SHEETS:
#    - Asegúrate de que la hoja sea accesible públicamente
#    - Usa una API Key con restricciones
#    - Verifica que las columnas estén en el orden correcto
#    - Prueba la conexión antes de ir a producción
#
# 3. WHATSAPP:
#    - El número debe incluir el código de país
#    - Formato: código país + área + número (sin espacios)
#    - Ejemplo Argentina: 5491171416157
#
# 4. MONEDA:
#    - Usa códigos ISO 4217 (ARS, USD, EUR, etc.)
#    - Configura el locale según tu país
#    - Ajusta decimales según la moneda
#
# 5. TESTING:
#    - Usa valores de ejemplo para testing
#    - No uses datos reales en desarrollo
#    - Verifica todas las configuraciones antes de producción
#
# ============================================================================
